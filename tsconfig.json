{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["es6", "es7", "es2017", "dom","es2015.promise"],
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",

    // "outDir": "./dist/",
    // "module": "commonjs",
    "target": "es2015",
    // "declaration": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
