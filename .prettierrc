{
  "printWidth": 80,
  "semi": false,
  "singleQuote": true,
  "useTabs": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "parser": "typescript",
  "overrides": [
    {
      "files": [
        "*.less",
        "*.css"
      ],
      "options": {
        "parser": "less"
      }
    },
    {
      "files": [
        "*.tsx",
        "*.ts"
      ],
      "options": {
        "parser": "babylon"
      }
    }
  ]
}
